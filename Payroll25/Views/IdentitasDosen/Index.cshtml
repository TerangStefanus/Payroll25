@model IdentitasDosenModel.IdentitasDosenViewModel

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<head>
    <!-- Referensi ke DataTables -->
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.2/css/jquery.dataTables.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-rbsA2VBKQhggwzxH7pPCaAqO46MgnOM80zW1RWuH61DGLwZJEdK2Kadq2F9CUG65" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.min.css">
    <style>
        th, td {
            min-width: 150px;
        }

        #dataTable {
            width: 100%;
        }

    </style>
</head>


<body>
    <h1 style="margin-bottom: 30px"><strong>Identitas Dosen</strong></h1>

    <div class="border border-5" style="padding: 10px">
        <h3>Tambah Rekening Dosen</h3>
    </div>

    <div class="border border-5" style="margin-bottom: 30px; padding: 10px">
        <div class="row">
            <div class="col-sm-6" style="margin-top: 20px;">
                @using (Html.BeginForm("Create", "IdentitasDosen", FormMethod.Post))
                {
                    @Html.AntiForgeryToken()

                    <div class="form-group" style="width: 670px;padding-left: 20px;padding-top: 10px;">
                        <label asp-for="IdentitasDosen.NO_REKENING" class="control-label">NO REKENING</label>
                        <input asp-for="IdentitasDosen.NO_REKENING" class="form-control" />
                        <span asp-validation-for="IdentitasDosen.NO_REKENING" class="text-danger"></span>
                    </div>

                    <div class="form-group" style="width: 670px;padding-left: 20px;padding-top: 10px;">
                        <label asp-for="IdentitasDosen.NPP" class="control-label"></label>

                        <select class="form-control form-control-lg" id="selectNPP" asp-for="IdentitasDosen.NPP">
                            <option value="">-- Pilih NPP --</option>
                            @foreach (var list in Model.NPPList)
                            {
                                <option value="@list.NPP">@list.NPP</option>
                            }
                        </select>

                        <span asp-validation-for="IdentitasDosen.NPP" class="text-danger"></span>
                    </div>

                    <div class="form-group" style="width: 670px;padding-left: 20px;padding-top: 10px;">
                        <label asp-for="IdentitasDosen.NAMA_BANK" class="control-label">NAMA BANK</label>
                        <input asp-for="IdentitasDosen.NAMA_BANK" class="form-control" />
                        <span asp-validation-for="IdentitasDosen.NAMA_BANK" class="text-danger"></span>
                    </div>

                    <div class="form-group" style="width: 670px;padding-left: 20px;padding-top: 10px;">
                        <label asp-for="IdentitasDosen.NAMA_REKENING" class="control-label">NAMA REKENING</label>
                        <input asp-for="IdentitasDosen.NAMA_REKENING" class="form-control" />
                        <span asp-validation-for="IdentitasDosen.NAMA_REKENING" class="text-danger"></span>
                    </div>


                    <div class="form-group" style="width: 670px; padding-left: 20px; padding-top: 10px;">
                        <label asp-for="IdentitasDosen.STATUS_REKENING" class="control-label">STATUS REKENING</label>
                        <select asp-for="IdentitasDosen.STATUS_REKENING" class="form-control">
                            <option value="Aktif">Aktif</option>
                            <option value="Non Aktif">Non Aktif</option>
                        </select>
                        <span asp-validation-for="IdentitasDosen.STATUS_REKENING" class="text-danger"></span>
                    </div>

                    <div class="form-group" style="width: 670px; padding-left: 20px; padding-top: 10px;">
                        <label asp-for="IdentitasDosen.STATUS" class="control-label"></label>
                        <select asp-for="IdentitasDosen.STATUS" class="form-control">
                            <option value="Aktif">Aktif</option>
                            <option value="Non Aktif">Non Aktif</option>
                        </select>
                        <span asp-validation-for="IdentitasDosen.STATUS" class="text-danger"></span>
                    </div>

                    <div class="form-group" style="width: 670px;padding-left: 20px;padding-top: 10px;">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>

                }
            </div>
        </div>
    </div>

    <table class="table" id="data-table">
        <thead style="background-color: #8FA0C7">
            <tr>
                <th>NPP</th>
                <th>NAMA</th>
                <th>TGL LAHIR</th>
                <th>JENIS KELAMIN</th>
                <th>ID UNIT</th>
                <th>ID REF GOLONGAN</th>
                <th>NO TELEPON</th>
                <th>NPWP</th>
                <th>ALAMAT</th>
                <th>NO REKENING</th>
                <th>NAMA REKENING</th>
                <th>NAMA BANK</th>
                <th>STATUS REKENING</th>
                <th>BUTTON</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var identitasDosen in Model.IdentitasDosenList)
            {
                <tr>
                    <td>@identitasDosen.NPP</td>
                    <td>@identitasDosen.NAMA</td>
                    <td>@identitasDosen.TGL_LAHIR</td>
                    <td>@identitasDosen.JNS_KEL</td>
                    <td>@identitasDosen.ID_UNIT</td>
                    <td>@identitasDosen.ID_REF_GOLONGAN</td>
                    <td>@identitasDosen.NO_TELPON_HP</td>
                    <td>@identitasDosen.NPWP</td>
                    <td>@identitasDosen.ALAMAT</td>
                    <td>@identitasDosen.NO_REKENING</td>
                    <td>@identitasDosen.NAMA_REKENING</td>
                    <td>@identitasDosen.NAMA_BANK</td>
                    <td>@identitasDosen.STATUS_REKENING</td>
                    <td>
                        <div class="d-flex">
                            <button type="button" class="btn btn-success mr-2" data-toggle="modal" data-target="#editModal-@identitasDosen.NO_REKENING" id="submit">Edit</button>
                            <button type="button" class="btn btn-danger mr-2" data-toggle="modal" data-target="#deleteModal-@identitasDosen.NO_REKENING" id="submit">Delete</button>
                        </div>
                    </td>
                </tr>

                <!-- Modal Edit -->
                <div class="modal fade" id="editModal-@identitasDosen.NO_REKENING" tabindex="-1" role="dialog" aria-labelledby="editModalLabel-@identitasDosen.NO_REKENING" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="editModalLabel-@identitasDosen.NO_REKENING">Edit Rekening Dosen Details</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">
                                @using (Html.BeginForm("EditDetails", "IdentitasDosen", new { NO_Rekening = identitasDosen.NO_REKENING }, FormMethod.Post))
                                {
                                    @Html.AntiForgeryToken()
                                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                    <div class="form-group">
                                        <label asp-for="IdentitasDosen.NO_REKENING" class="control-label"></label>
                                        <input asp-for="IdentitasDosen.NO_REKENING" class="form-control" value="@identitasDosen.NO_REKENING" />
                                        <span asp-validation-for="IdentitasDosen.NO_REKENING" class="text-danger"></span>
                                    </div>


                                    <div class="form-group">
                                        <label asp-for="IdentitasDosen.NPP" class="control-label"></label>

                                        <select class="form-control form-control-lg" asp-for="IdentitasDosen.NPP">
                                            @foreach (var item in Model.NPPList)
                                            {
                                                if (identitasDosen.NPP == item.NPP)
                                                {
                                                    <option value="@item.NPP" selected>@item.NPP</option>
                                                }
                                                else
                                                {
                                                    <option value="@item.NPP">@item.NPP</option>
                                                }
                                            }
                                        </select>

                                        <span asp-validation-for="IdentitasDosen.NPP" class="text-danger"></span>
                                    </div>


                                    <div class="form-group">
                                        <label asp-for="IdentitasDosen.NAMA_BANK" class="control-label"></label>
                                        <input asp-for="IdentitasDosen.NAMA_BANK" class="form-control" value="@identitasDosen.NAMA_BANK" />
                                        <span asp-validation-for="IdentitasDosen.NAMA_BANK" class="text-danger"></span>
                                    </div>

                                    @*<div class="form-group">
                                        <label asp-for="IdentitasDosen.STATUS_REKENING" class="control-label"></label>
                                        <input asp-for="IdentitasDosen.STATUS_REKENING" class="form-control" value="@identitasDosen.STATUS_REKENING" />
                                        <span asp-validation-for="IdentitasDosen.STATUS_REKENING" class="text-danger"></span>
                                    </div>*@

                                    <div class="form-group">
                                        <label asp-for="IdentitasDosen.STATUS_REKENING" class="control-label"></label>
                                        <select asp-for="IdentitasDosen.STATUS_REKENING" class="form-control">
                                            @if (identitasDosen.STATUS_REKENING == "Aktif")
                                            {
                                                <option value="Aktif" selected>Aktif</option>
                                                <option value="Non Aktif">Non Aktif</option>
                                            }
                                            else if (identitasDosen.STATUS_REKENING == "Non Aktif")
                                            {
                                                <option value="Aktif">Aktif</option>
                                                <option value="Non Aktif" selected>Non Aktif</option>
                                            }
                                            else
                                            {
                                                <option value="Aktif">Aktif</option>
                                                <option value="Non Aktif">Non Aktif</option>
                                            }
                                        </select>
                                        <span asp-validation-for="IdentitasDosen.STATUS_REKENING" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="IdentitasDosen.STATUS" class="control-label"></label>
                                        <select asp-for="IdentitasDosen.STATUS" class="form-control">
                                            @if (identitasDosen.STATUS == "Aktif")
                                            {
                                                <option value="Aktif" selected>Aktif</option>
                                                <option value="Non Aktif">Non Aktif</option>
                                            }
                                            else if (identitasDosen.STATUS == "Non Aktif")
                                            {
                                                <option value="Aktif">Aktif</option>
                                                <option value="Non Aktif" selected>Non Aktif</option>
                                            }
                                            else
                                            {
                                                <option value="Aktif">Aktif</option>
                                                <option value="Non Aktif">Non Aktif</option>
                                            }
                                        </select>
                                        <span asp-validation-for="IdentitasDosen.STATUS" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <label asp-for="IdentitasDosen.NAMA_REKENING" class="control-label"></label>
                                        <input asp-for="IdentitasDosen.NAMA_REKENING" class="form-control" value="@identitasDosen.NAMA_REKENING" />
                                        <span asp-validation-for="IdentitasDosen.NAMA_REKENING" class="text-danger"></span>
                                    </div>

                                    <div class="form-group">
                                        <input type="submit" value="Save" class="btn btn-primary" />
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Modal Delete -->
                <div class="modal fade" id="deleteModal-@(identitasDosen.NO_REKENING)" tabindex="-1" role="dialog" aria-labelledby="deleteModalLabel-@(identitasDosen.NO_REKENING)" aria-hidden="true">
                    <div class="modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="deleteModalLabel-@(identitasDosen.NO_REKENING)">Delete Confirmation</h5>
                                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                    <span aria-hidden="true">&times;</span>
                                </button>
                            </div>
                            <div class="modal-body">

                                <!-- Data passed is displayed in this part of the modal body -->
                                <input type="text" placeholder="NO_REKENING" name="NO_REKENING" class="form-control" id="NO_REKENING" value="@identitasDosen.NO_REKENING" hidden>
                                <p>Apakah Anda Yakin akan menghapus data NO REKENING @identitasDosen.NO_REKENING ini?</p>

                            </div>
                            <div class="modal-footer">
                                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                                <form asp-action="Delete" asp-route-NO_Rekening="@identitasDosen.NO_REKENING" method="post">
                                    @Html.AntiForgeryToken()
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </tbody>
    </table>


</body>


@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.datatables.net/1.11.2/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-kenU1KFdBIe4zVF0s0G1M5b4hcpxyD9F7jL+jjXkk+Q2h455rYXK/7HAuoJl+0I4" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/chosen/1.8.7/chosen.jquery.min.js"></script>

    <script>
        $(document).ready(function () {
            $('#data-table').DataTable({
                "paging": true, // Menampilkan pagination
                "lengthMenu": [10, 25, 50, 100], // Opsi jumlah data per halaman
                "pageLength": 10, // Jumlah data yang ditampilkan per halaman
                "scrollY": 400, // Tinggi scrollable tbody
                "scrollX": true, // Membuat thead menjadi scrollable secara horizontal
                "scrollCollapse": true, // Mengatur tinggi tabel tetap sama saat tabel kosong
                "order": [[0, "desc"]] // Mengurutkan data berdasarkan kolom pertama secara ascending
            });
        });

        $(document).ready(function () {
            $('#selectNPP').chosen();
        });
    </script>
}





